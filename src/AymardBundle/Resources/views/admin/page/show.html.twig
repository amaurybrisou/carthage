{% extends 'AymardBundle::admin/admin_base.html.twig' %}

{% block body %}
    <h1>Page</h1>

    <table>
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ page.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ page.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="form-inline">
        <li class="form-group">
            <a class="btn btn-primary" href="{{ path('admin_page_index') }}">Back to the list</a>
        </li>
        <li class="form-group">
            <a class="btn btn-primary" href="{{ path('admin_page_edit', { 'id': page.id }) }}">Edit</a>
        </li>
 
    </ul>
{% endblock %}
