{% extends 'base.html.twig' %}

{% block body %}
    <h1>Page</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ page.title }}</td>
            </tr>
            <tr>
                <th>Meta_description</th>
                <td>{{ page.metadescription }}</td>
            </tr>
            <tr>
                <th>Meta_title</th>
                <td>{{ page.metatitle }}</td>
            </tr>
            <tr>
                <th>Meta_site_name</th>
                <td>{{ page.metasitename }}</td>
            </tr>
            <tr>
                <th>Meta_content</th>
                <td>{{ page.metacontent }}</td>
            </tr>
            <tr>
                <th>Meta_url</th>
                <td>{{ page.metaurl }}</td>
            </tr>
            <tr>
                <th>Meta_image</th>
                <td>{{ page.metaimage }}</td>
            </tr>
            <tr>
                <th>Meta_keywords</th>
                <td>{{ page.metakeywords }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ page.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_page_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_page_edit', { 'id': page.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
