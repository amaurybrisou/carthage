{% extends 'admin_base.html.twig' %}

{% block body %}
    <h1>Page edit</h1>

    {{ form_start(edit_form) }}
        {{ form_row(edit_form.title) }}
        {{ form_row(edit_form.description) }}  
        <h1>Meta</h1>
        <ul class="metas" data-prototype="{{ form_widget(edit_form.meta.vars.prototype)|e('html_attr') }}">
            {% for m in edit_form.meta %}
                <li>{{ form_row(m.property) }}</li>
                <li>{{ form_row(m.content) }}</li>
            {% endfor %}
        </ul>
    
        <input type="submit" value="Edit" />
        {{ form_rest(edit_form) }}
    {{ form_end(edit_form, {'render_rest': false}) }}

    <ul>
        <li>
            <a href="{{ path('admin_page_index') }}">Back to the list</a>
        </li>

    </ul>
    
    <script>
        var $collectionHolder;

        // setup an "add a tag" link
        var $addMetaLink = $('<a href="#" class="add_meta_link">Add a Meta tag</a>');
        var $newLinkLi = $('<li></li>').append($addMetaLink);
        
        
        
        function addMetaFormDeleteLink($metaFormLi) {
            var $removeFormA = $('<a href="#">delete this tag</a>');
            $metaFormLi.append($removeFormA);
        
            $removeFormA.on('click', function(e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();
        
                $metaFormLi.remove();
            });
        }

        
        
        function addMetaForm($collectionHolder, $newLinkLi) {
            // Get the data-prototype explained earlier
            var prototype = $collectionHolder.data('prototype');
        
            // get the new index
            var index = $collectionHolder.data('index');
        
            // Replace '__name__' in the prototype's HTML to
            // instead be a number based on how many items we have
            var newForm = prototype.replace(/__name__/g, index);
        
            // increase the index with one for the next item
            $collectionHolder.data('index', index + 1);
        
            // Display the form in the page in an li, before the "Add a tag" link li
            var $newFormLi = $('<li></li>').append(newForm);
            $newLinkLi.before($newFormLi);
            
            // add a delete link to the new form
            addMetaFormDeleteLink($newFormLi);
        }
        
        jQuery(document).ready(function() {
            // Get the ul that holds the collection of tags
            $collectionHolder = $('ul.metas');
            
