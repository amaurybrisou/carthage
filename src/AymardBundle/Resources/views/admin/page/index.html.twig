{% extends 'admin_base.html.twig' %}

{% block body %}
    <h1>Page list</h1>

    <table id="table" class="table table-striped table-bordered" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                {#<th>Meta_description</th>#}
                {#<th>Meta_title</th>#}
                {#<th>Meta_site_name</th>#}
                {#<th>Meta_content</th>#}
                {#<th>Meta_url</th>#}
                {#<th>Meta_image</th>#}
                {#<th>Meta_keywords</th>#}

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td><a href="{{ path('admin_page_show', { 'id': page.id }) }}">{{ page.id }}</a></td>
                <td>{{ page.title }}</td>
                <td>{{ page.description }}</td>
                {#<td>{{ page.metadescription }}</td>#}
                {#<td>{{ page.metatitle }}</td>#}
                {#<td>{{ page.metasitename }}</td>#}
                {#<td>{{ page.metacontent }}</td>#}
                {#<td>{{ page.metaurl }}</td>#}
                {#<td>{{ page.metaimage }}</td>#}
                {#<td>{{ page.metakeywords }}</td>#}

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_page_show', { 'id': page.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_page_edit', { 'id': page.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_page_new') }}">Create a new entry</a>
        </li>
    </ul>
    
    <script type="text/javascript">
        $(document).ready(function(){
            $('#table').DataTable();
        });
    </script>
{% endblock %}
