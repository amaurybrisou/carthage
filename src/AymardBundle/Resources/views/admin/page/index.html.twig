{% extends 'AymardBundle::admin/admin_base.html.twig' %}

{% block body %}
    <h1>Page list</h1>

    <table id="table" class="table table-striped table-bordered" >
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.title }}</td>
                <td>{{ page.description }}</td>
                
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-primary" href="{{ path('admin_page_show', { 'id': page.id }) }}">show</a>
                        </li>
                        <li>
                            <a class="btn btn-primary" href="{{ path('admin_page_edit', { 'id': page.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-primary" href="{{ path('admin_page_new') }}">Create a new entry</a>
        </li>
    </ul>
    
    <script type="text/javascript">
        $(document).ready(function(){
            $('#table').DataTable();
        });
    </script>
{% endblock %}
