{% extends 'AymardBundle::admin/admin_base.html.twig' %}

{% trans_default_domain "AvanzuAdminTheme" %}

{% block body %}
    <h1>Image</h1>

    <table>
        <tbody>
            <tr>
                <th>{{ 'image.order'|trans}}</th>
                <td>{{ image.getImageOrder() }}</td>
            </tr>
            <tr>
                <th>{{ 'image.description'|trans}}</th>
                <td>{{ image.description }}</td>
            </tr>
            <tr>
                <th>{{'image.file'|trans}}</th>
                <td>{{ image.file }}</td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <img class="thumbnail" height="300px" src="{{ asset('img/' ~ image.file ~ '' ) }}"/>
                </td>
            </tr>
        </tbody>
    </table>

    <ul class="form-inline">
        <li class="form-group">
            <a class="btn btn-primary"  href="{{ path('admin_image_index') }}">{{'admin.back'|trans}}</a>
        </li>
        <li class="form-group">
            <a class="form-control btn btn-primary" href="{{ path('admin_image_edit', { 'id': image.id }) }}">{{'admin.edit'|trans}}</a>
        </li>
        <li class="form-group">
            <a class="form-control btn btn-primary" href="{{ path('admin_image_new') }}">{{'admin.new'|trans}}</a>
        </li>
        <li class="form-group">
            {{ form_start(delete_form) }}
                <input class="form-control btn btn-primary" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
