{% extends 'AymardBundle::base.html.twig' %}

{% trans_default_domain "biography" %}

{% block javascripts %}
    {% javascripts 
        '@AymardBundle/Resources/public/vendors/jquery/dist/jquery.min.js'
        '@bootstrap_js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block stylesheets %}
    {% stylesheets  filter="cssrewrite"
        '@bootstrap_css'
        '@AymardBundle/Resources/public/css/main.css'
        '@AymardBundle/Resources/public/css/language_switcher.css'
        '@AymardBundle/Resources/public/css/menu.css'
        '@AymardBundle/Resources/public/css/biography.css'
        '@AymardBundle/Resources/public/css/contact-modal.css'
    %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}


{% block left_slider %}{% endblock %}

{% block body %}
    <main>
        <div class="biography">
            <div class="title">
                <article>
                    <h3>{{ 'painter_name' | trans }}</h3>
                </article>
                <article>
                    <h4>{{ 'artiste_peintre' | trans | upper }}</h4>
                </article>
                <div>
                    {% for photo in photos %}
                        <img class="thumbnail" src="{{ asset('img/' ~ photo.file ~ '') }}" alt="{{ photo.description }}"/>
                    {% endfor %}
                </div>
            </div>
            <article class="right_content">
                <h3 style="display:none;">{{ 'painter_name' | trans }}</h3>
                <div class="right_content_top">
                    
            		<div>
                    	<p class="first-letter-style">{{ 'biography.p1' | trans }}</p>
                    	<p class="first-letter-style">{{ 'biography.p2' | trans }}</p>
                        <p class="first-letter-style">{{ 'biography.p3' | trans }}</p>
                    </div>
                </div>
                <div class="right_content_bottom">
                    <p class="first-letter-style">{{ 'biography.p4' | trans }}</p>
                    <p class="first-letter-style">{{ 'biography.p5' | trans }}</p>
                    <p class="first-letter-style">{{ 'biography.p6' | trans }}</p>
                    <p class="first-letter-style">{{ 'biography.p7' | trans }}</p>
                    <p class="first-letter-style">{{ 'biography.p8' | trans }}</p>
                    <p class="first-letter-style">{{ 'biography.p9' | trans }}</p>
                    <p class="first-letter-style">{{ 'biography.p10' | trans }}</p>
                    <p class="firm">{{ 'biography.firm' | trans }}</p>
                </div>
            </article>
        </div>
        {% include "AymardBundle::commons/contact-modal.html.twig" %}
    </main>

{% endblock %}

