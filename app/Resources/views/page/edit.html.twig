{% extends 'admin_base.html.twig' %}
{% block body %}
    <h1>Page edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form.slug) }}
        <h1>Meta</h1>
        <ul class="translations form-inline" data-prototype="{{ form_widget(edit_form.translations.vars.prototype)|e('html_attr') }}" >
            {% for translation in edit_form.translations %}
                <li>
                    <div class="form-group">
                        {{ form_row(translation.locale) }}
                        {{ form_row(translation.title) }}
                        {{ form_row(translation.description) }}
                    </div>
                </li>
            {% endfor %}
            
        </ul>
        <input type="submit" value="Edit" />
        {{ form_rest(edit_form) }}
    {{ form_end(edit_form, {'render_rest': false}) }}

    <ul>
        <li>
            <a href="{{ path('admin_page_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    
    
    <script>
        var $collectionHolder;

        // setup an "add a tag" link
        var $addTranslationLink = $('<button href="#" class="btn btn-primary add_meta_link">Add a Translation tag</button>');
        var $newLinkLi = $('<li></li>').append($addTranslationLink);
        
        
        
        function addTranslationFormDeleteLink($translationFormLi) {
            var $removeFormA = $('<button class="btn btn-primary" href="#">Delete this Translation</button>');
            $translationFormLi.append($removeFormA);
        
            $removeFormA.on('click', function(e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();
        
                $translationFormLi.remove();
            });
        }

        
        
        function addTranslationForm($collectionHolder, $newLinkLi) {
            // Get the data-prototype explained earlier
            var prototype = $collectionHolder.data('prototype');
        
            // get the new index
            var index = $collectionHolder.data('index');
        
            // Replace '__name__' in the prototype's HTML to
            // instead be a number based on how many items we have
            var newForm = prototype.replace(/__name__/g, index);
            
            // increase the index with one for the next item
            $collectionHolder.data('index', index + 1);
        
            // Display the form in the page in an li, before the "Add a tag" link li
            var $newFormDiv = $('<div class="form-inline"></div>').append(newForm);
            $newLinkLi.before($newFormDiv);
            
            // add a delete link to the new form
            addTranslationFormDeleteLink($newFormDiv);
            
            return index;
        }
        
        jQuery(document).ready(function() {
            // Get the ul that holds the collection of tags
            $collectionHolder = $('ul.translations');
            
            // add a delete link to all of the existing tag form li elements
            $collectionHolder.find('li').each(function() {
                addTranslationFormDeleteLink($(this));
            });
        
            // add the "add a tag" anchor and li to the tags ul
            $collectionHolder.append($newLinkLi);
        
            // count the current form inputs we have (e.g. 2), use that as the new
            // index when inserting a new item (e.g. 2)
            $collectionHolder.data('index', $collectionHolder.find(':input').length);
        
            $addTranslationLink.on('click', function(e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();
                // add a new tag form (see next code block)
                var index = addTranslationForm($collectionHolder, $newLinkLi);
                
                $("#page_translations_" + index ).addClass('form-group');
            });
        });
        

    </script>
{% endblock %}
